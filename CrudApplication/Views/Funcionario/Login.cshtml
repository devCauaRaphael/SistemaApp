@model CrudApplication.Models.tbFuncionario

@{
    ViewData["Title"] = "Login";
}

<div class="card login-card mx-auto">
    <div class="card-header py-3 text-center login-header">
        <h4><i class="bi bi-box-arrow-in-right"></i> Acesso ao Sistema</h4>
    </div>
    <div class="card-body p-4">
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="seu@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Senha" class="form-label"></label>
                <input asp-for="Senha" type="password" class="form-control" placeholder="••••••" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-login btn-primary py-2">
                    <i class="bi bi-box-arrow-in-right"></i> Entrar
                </button>
            </div>
        </form>
    </div>
</div>