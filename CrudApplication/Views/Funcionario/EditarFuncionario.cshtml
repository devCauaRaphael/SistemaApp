@model CrudApplication.Models.tbFuncionario

@{
    ViewData["Title"] = "Editar Funcionario";
}

<link href="~/css/editarfuncionario.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h3>
        </div>

        <div class="card-body">
            <form asp-action="EditarProduto" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-warning"></div>

                <input type="hidden" asp-for="IdFuncionario" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="seuemail@gmail.com" type="email" required />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Senha" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                <input asp-for="Senha" class="form-control" placeholder="••••••" type="password" required />
                            </div>
                            <span asp-validation-for="Senha" class="text-danger small"></span>
                        </div>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-warning text-dark">
                        <i class="bi bi-check-circle"></i> Atualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>