@model CrudApplication.Models.tbFuncionario

@{
    ViewData["Title"] = "Sistema de Gerenciamento";
}
<div class="container-fluid min-vh-100 d-flex flex-column bg-light " id="Inicio">
    <header class="bg-white shadow-sm p-3">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <i class="bi bi-box-seam fs-4 me-2 text-primary"></i>
                <h4 class="mb-0 fw-normal">GERENCIAMENTO</h4>
            </div>
            <div class="d-flex align-items-center">
                <span class="me-3 small">
                    <i>
                        @(Model?.Email ?? "usuário@indefinido.com")
                    </i>
                </span>
                <a asp-controller="Home" asp-action="Index"class="text-muted small">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
        </div>
    </header>
    <div class="row flex-grow-1">
        <nav class="col-md-2 bg-white p-3 border-end">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-dark active" href="#Inicio">
                        <i class="bi bi-house-door me-2"></i> Início
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Funcionario" asp-action="Index" class="nav-link text-dark">
                        <i class="bi bi-people me-2"></i> Funcionários
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Produto" asp-action="Index" class="nav-link text-dark">
                        <i class="bi bi-box-seam me-2"></i> Produtos
                    </a>
                </li>
            </ul>
        </nav>
        <main class="col-md-10 p-4">
            <div class="container">
                <h2 class="mb-4 text-muted"><i class="bi bi-speedometer2 me-2"></i>Painel</h2>
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="card-subtitle text-muted mb-2">FUNCIONÁRIOS</h6>
                                        <h3 class="mb-0">Consulte o Sistema</h3>
                                    </div>
                                    <i class="bi bi-people fs-3 text-primary"></i>
                                </div>
                                <a asp-controller="Funcionario" asp-action="Index" class="stretched-link"></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="card-subtitle text-muted mb-2">PRODUTOS</h6>
                                        <h3 class="mb-0">Consulte o Sistema</h3>
                                    </div>
                                    <i class="bi bi-box-seam fs-3 text-success"></i>
                                </div>
                                <a asp-controller="Produto" asp-action="Index" class="stretched-link"></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-muted mb-3">AÇÕES RÁPIDAS</h5>
                        <div class="row g-2">
                            <div class="col-md-6">
                                <a asp-controller="Funcionario" asp-action="CadastrarFuncionario"
                                   class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center py-2">
                                    <i class="bi bi-person-plus me-2"></i> Novo Funcionário
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a asp-controller="Produto" asp-action="CadastrarProduto"
                                   class="btn btn-outline-success w-100 d-flex align-items-center justify-content-center py-2">
                                    <i class="bi bi-plus-circle me-2"></i> Novo Produto
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
